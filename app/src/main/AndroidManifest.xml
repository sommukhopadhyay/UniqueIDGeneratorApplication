<manifest xmlns:android="http://schemas.android.com/apk/res/android" 
          package="com.somitsolutions.training.android.uniqueidgeneratorapplication"
          android:versionName="1.0" >

  <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

  <application android:icon="@drawable/icon">

    <activity android:name="com.somitsolutions.training.android.uniqueidgeneratorapplication.UniqueIDGeneratorActivity" 
                  android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    
    <service android:name="com.somitsolutions.training.android.uniqueidgeneratorapplication.UniqueIDGeneratorService"
             android:exported="true" 
             android:process=":remote">
    </service>
  </application>
</manifest> 
